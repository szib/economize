<h2 class="fluid ui center aligned huge icon header">
  <i class="chart pie icon"></i>
  <div class="content">
    General Service Stats
  </div>
</h2>
<div class="ui two column grid">
  <div class="column">
    <div class="ui fluid raised card">
      <div class="content">
        <div class= "meta"><span class= "descrip">Most addictive services, ranked: </span></div>
        <% @ranked_by_addictiveness.each.with_index do |service, idx| %>
          <h1>
            <%= idx +1 %>. 
            <%= service.name %> -
            <%= sprintf( "%0.02f", service.returning_percentage) %>
            % returning users. 
          </h1>
        <% end %>
      </div>
      <div class="ui bottom attached olive button">
        <%= link_to 'view all services', services_path %>
      </div>
    </div>
  </div>
  <div class="column">
    <div class="ui fluid raised card">
      <div class="content">
        <div class= "meta"><span class= "descrip">Most expensive services, ranked:</span></div>
        <% @most_expensive_services.each.with_index do |service, idx| %>
          <h1>
            <%= idx + 1 %>. 
            <%= service.name %> -
            <%= format_price(service.current_price) %>
          </h1>
        <% end %>
      </div>
      <div class="ui bottom attached olive button">
        <%= link_to 'view all services', services_path %>
      </div>
    </div>
  </div>
</div>
<div class="ui two grid column">
  <a class="ui fluid raised card" href= <%= services_path %>>
    <div class="content">
      <div class= "center aligned meta description"><span class= "descrip"> Services ranked by total number of users: </span></div>
      <br>
      <% @ranked_by_num_of_users.each.with_index do |service, index| %>
        <div class="center aligned description">
          <%= index+1 %>. <%= service.name %>,  number of users:  <%= service.num_of_users %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="column">
  <a class="ui fluid raised card" href= <%= services_path %>>
    <div class="content">
      <div class= "center aligned meta description"><span class= "descrip"> Services ranked by total value of subscriptions: </span></div>
      <br>
      <% @ranked_by_value.each.with_index do |service, idx| %>
        <div class="center aligned description">
          <%= idx + 1 %>. 
          <%= service.name %>, at <%= format_price(service.subscription_value) %>
        </div>
      <% end %>
      <br>
    </div>
  </div>
</div>
<a class="ui fluid raised card" href= <%= services_path %>>
  <div class="content">
    <div class= "center aligned meta description"><span class= "descrip"> Services ranked by predicted monthly price in 6 months:  </span></div>
    <br>
      <% @ranked_by_future_price.each.with_index do |service, idx| %>
        <div class="center aligned description">
          <%= idx + 1 %>. <%= service.name %>, at <%= format_price(service.future_price(6)) %></span></div>
      <% end %>

    </div>
  </div>
