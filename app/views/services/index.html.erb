<div class="ui raised text container">
  <table class="ui selectable celled table">
    <thead>
      <tr>
        <th class="ui center aligned header">Name</th>
        <th class="ui center aligned header">Description</th>
        <th class="ui center aligned header">Current price</th>
        <th class="ui center aligned header">Visitors</th>
      </tr>
    </thead>
    <tbody>
      <% @services.each do |service| %>
        <tr>
          <td class="ui center aligned header"><%= link_to service.name, service %></td>
          <td><%= service.description %></td>
          <td class="ui center aligned"><%= format_price(service.current_price) %></td>
          <td class="ui center aligned"><%= service.visitor_count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
